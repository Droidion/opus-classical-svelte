{
  "name": "opus-classical-svelte",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.1.34",
  "engines": {
    "bun": ">=1.1.34"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "bun run --bun vite dev",
    "build": "bun run --bun vite build",
    "preview": "bun run --bun vite preview",
    "check": "bun run svelte-kit sync && bun run svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bun run svelte-kit sync && bun run svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "bun run eslint .",
    "lint:fix": "bun run eslint . --fix",
    "test": "bun test",
    "test:ci": "bun test --run"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "^0.38.3",
    "fuse.js": "^7.0.0",
    "ky": "^1.7.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@sveltejs/kit": "^2.15.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/bun": "^1.1.14",
    "@types/eslint": "^9.6.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^0.1.3",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "svelte": "^5.16.0",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.6"
  }
}
