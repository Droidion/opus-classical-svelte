{
  "name": "opus-classical-svelte",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.2.10",
  "engines": {
    "bun": ">=1.1.42"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "bun run --bun vite dev",
    "build": "bun run --bun vite build",
    "preview": "bun run --bun vite preview",
    "check": "bun run svelte-kit sync && bun run svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bun run svelte-kit sync && bun run svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "bun run eslint .",
    "lint:fix": "bun run eslint . --fix",
    "test": "bun test",
    "test:ci": "bun test --run"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.42.0",
    "fuse.js": "^7.1.0",
    "ky": "^1.8.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@sveltejs/kit": "^2.20.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/bun": "^1.2.10",
    "@types/eslint": "^9.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.18.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "svelte": "^5.28.1",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "^4.1.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "6.3.4"
  }
}
